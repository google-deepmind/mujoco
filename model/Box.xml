<mujoco model="box">
  <compiler angle="degree" inertiafromgeom="true"/>
  
  <option timestep="0.005" gravity="0 0 -9.81"/>
  
  <default>
    <geom contype="1" conaffinity="1" condim="3" friction="0.8 0.1 0.1" 
       solref="0.01 1" solimp="0.95 0.99 0.0001" margin="0.001"/>
  </default>

  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" 
 rgb1="0.2 0.3 0.4" rgb2="0.1 0.15 0.2"/>
    <material name="grid" texture="grid" texrepeat="8 8" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 3" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    <light pos="1 1 3" dir="-0.5 -0.5 -1" diffuse="0.4 0.4 0.4"/>
    
    <geom name="floor" type="plane" size="10 10 0.1" material="grid" condim="3"/>
    
    <body name="cube" pos="0 0 1">
      <freejoint/>
      <geom name="cube_geom" type="box" size="0.2 0.2 0.2" 
      rgba="0.8 0.2 0.2 1" mass="1" density="1000"/>
      <inertial pos="0 0 0" mass="1" diaginertia="0.027 0.027 0.027"/>
    </body>
  </worldbody>
</mujoco>
